<div class="row-fluid">
  <div class="span4 well height800">
    <fieldset>
      

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <legend>Sign up to Tannerfest!</legend>
      <div class="status">
        <div class="white"><%= f.input :first_name %></div>
        <div class="white"><%= f.input :last_name %></div>
        <div class="white"><%= f.input :profile_name %></div>
        <div class="white"><%= f.input :email %></div>
        <div class="white"><%= f.input :password %></div>
        <div class="white"><%= f.input :password_confirmation %></div>
      </div>
      	 

      <%= f.button :submit, class: "btn  btn-success" %>
    </fieldset>
      
    <% end %>

    <%= render "devise/shared/links" %>
    

  </div>

  <div class="span8 well height800">
    
  </div>
</div>
