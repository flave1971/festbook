

<div class="row-fluid">
	<div class="span4 well height800">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>
		  <legend>Forgot your password?</legend>
		  <div class ="status">

			<div class ="white"><%= f.label :email %></div><br />
			<div class ="white"><%= f.email_field :email, :autofocus => true %></div><br />
		  </div>

		  <div><%= f.submit "Send me reset password instructions", class: "btn btn-success" %></div>
		<% end %>
	</div>

	<div class="span8 well height800">
		<!--CONTENT HERE-->
	</div>
</div>

<%= render "devise/shared/links" %>
